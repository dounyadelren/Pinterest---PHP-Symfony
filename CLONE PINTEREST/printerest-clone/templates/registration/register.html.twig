{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="formulaire">
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
                
            <!-- <input type="hidden" name="_token" value="{{ csrf_token('app_register') }}"> -->
            {{ form_row(registrationForm.lastName, {'attr' : {'class' : 'form-control'} }) }}
            {{ form_row(registrationForm.firstName, {'attr' : {'class' : 'form-control'} }) }}
            {{ form_row(registrationForm.email, {'attr' : {'class' : 'form-control'} }) }}
            {{ form_row(registrationForm.plainPassword, {'attr' : {'class' : 'form-control'} }, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            {{ form_rest(registrationForm) }}
            <button type="submit" class="mt-3 btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
